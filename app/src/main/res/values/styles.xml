<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--登录输入框浮动标签-->
    <style name="login_hintAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tab_login_press</item>
    </style>
    <!--登录忘记密码 注册按钮 字体-->
    <style name="login_text_color">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_login_text</item>
    </style>

    <style name="MaterialRatingBar24dp">
        <item name="android:minHeight">14dp</item>
        <item name="android:maxHeight">14dp</item>
    </style>

    <style name="MainDrawerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMainDrawerPrimary</item>
        <item name="colorPrimaryDark">@color/colorMainDrawerPrimaryDark</item>
        <item name="colorAccent">@color/colorMainDrawerAccent</item>
    </style>

    <style name="customDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="keyboard_style">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>
</resources>